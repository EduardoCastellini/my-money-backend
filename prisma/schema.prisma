generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:./dev.db"
}

model Users {
  id       String    @id
  email    String    @unique
  name     String
  password String
  debts    Debts[]
  incomes  Incomes[]
}

model Debts {
  id          String    @id
  description String
  amount      Int
  dueDate     DateTime
  status      String
  paymentDate DateTime?
  tags        String

  user   Users  @relation(fields: [userId], references: [id])
  userId String
}

model Incomes {
  id          String   @id
  description String
  amount      Int
  dueDate     DateTime
  status      String
  tags        String

  user   Users  @relation(fields: [userId], references: [id])
  userId String
}
